{
  "name": "HS UX improvements",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "This extension removes annoying stuff from hs.fi.",
  "homepage_url": "https://github.com/ypcs/hsux",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "http://www.hs.fi/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.hs.fi/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
