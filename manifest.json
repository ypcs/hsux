{
  "name": "HSUX (UI fixes)",
  "short_name": "HSUX-UI",
  "version": "0.1",
  "manifest_version": 2,
  "description": "This extension does misc changes to HS.fi UI",
  "homepage_url": "https://github.com/ypcs/hsux",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "http://www.hs.fi/*",
    "https://www.hs.fi/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.hs.fi/*",
        "https://www.hs.fi/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
